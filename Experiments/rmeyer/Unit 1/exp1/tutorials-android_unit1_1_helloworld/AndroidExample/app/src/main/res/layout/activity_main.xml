<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:rotation="0"
    android:rotationX="0"
    android:rotationY="0"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/main_msg_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="50dp"
        android:text="An old Silent Pond.."
        android:textColor="#002D04"
        android:textSize="50dp"></TextView>

    <TextView
        android:id="@+id/sub_msg_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="125dp"
        android:layout_marginBottom="50dp"
        android:text="A frog jumps into the Pond"
        android:textColor="#0000FF"
        android:textSize="40dp"></TextView>

    <TextView
        android:id="@+id/bot_msg_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp"
        android:text="Splash! Silence again..."
        android:textColor="#002D04"
        android:textSize="40dp"></TextView>


</androidx.appcompat.widget.LinearLayoutCompat>
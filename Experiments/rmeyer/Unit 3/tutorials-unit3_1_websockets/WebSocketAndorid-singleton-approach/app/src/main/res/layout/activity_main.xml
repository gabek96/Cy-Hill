<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context=".MainActivity"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="Server URL (default to):" />

        <EditText
            android:id="@+id/serverEdt"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="ws://10.0.2.2:8080/chat/1/"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/unameEdt"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:hint="username"
            android:textSize="20dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/connectBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="Connect to chat server#1"
            android:textColor="@color/white"
            app:backgroundTint="#4CAF50" />

        <Button
            android:id="@+id/backBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Back to chat server#1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:text="Server2 URL (default to):" />

        <EditText
            android:id="@+id/serverEdt2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="ws://10.0.2.2:8080/chat/2/"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/unameEdt2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:hint="username"
            android:textSize="20dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/connectBtn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="Connect to chat server#2"
            android:textColor="@color/white"
            app:backgroundTint="#4CAF50" />

        <Button
            android:id="@+id/backBtn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Back to chat server#2"
            android:textColorLink="#8BC34A" />
    </LinearLayout>


    <!--    second chat server -->

</androidx.appcompat.widget.LinearLayoutCompat>